<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Activities.MentorProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/mentor_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/first_name_mentor"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mentor_speciality_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/specialty_mentor"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="22dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            >

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/city" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical"
                                android:paddingLeft="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="City:"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/mentor_city_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Agadir"
                                    android:textSize="12dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/mail" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical"
                                android:paddingLeft="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email:"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/mentor_email_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="email"
                                    android:textSize="12dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/number" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical"
                                android:paddingLeft="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phone number"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/mentor_number_phone_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Numver phone"
                                    android:textSize="12dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </ScrollView>


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_message_mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_message_black_24dp"
            app:fabSize="normal" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/meeting_mentor_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#92000000"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_layout"
            android:backgroundTint="@color/colorFlatWhite"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="32dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/exit_mettings_mentor"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_highlight_off_black_24dp"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meeting Informations:"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#2d2b2b"
                    android:fontFamily="sans-serif-condensed"
                    />
                <ImageButton
                    android:id="@+id/send_mettings_mentor"
                    android:layout_marginLeft="8dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_offline_pin_black_24dp"
                    android:background="@android:color/transparent"/>

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_place_meeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <EditText
                android:id="@+id/meeting_place_edit_text"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:inputType="textEmailAddress"
                android:hint="Meeting Place"
                />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/set_date_mentor_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:textColor="@color/colorFlatWhite"
                android:background="@color/colorPrimary"
                android:text="Set Date"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/set_time_mentor_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/colorFlatWhite"
                android:background="@color/colorPrimary"
                android:text="Set time"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/date_picker_mentor_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/finished_date_mentor"

            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_offline_pin_white_24dp"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="56dp"
            android:orientation="vertical">

            <DatePicker
                android:id="@+id/date_picker_mentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorFlatWhite"
                />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_picker_mentor_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/finished_time_mentor"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_offline_pin_white_24dp"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="56dp"
            android:orientation="vertical">

            <TimePicker
                android:id="@+id/time_picker_mentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorFlatWhite"
                />



        </LinearLayout>

    </LinearLayout>


</RelativeLayout>