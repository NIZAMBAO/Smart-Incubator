<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_startups"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/meeting"
                android:layout_margin="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:id="@+id/meetings_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place: Agadir,salam"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/meetings_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: Received"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/meetings_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : 2018.05.12 at 16:04"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/meetings_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Waiting"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    
    
</android.support.v7.widget.CardView>