<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <TextView
        android:id="@+id/message_body_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:background="@drawable/message_layout"
        android:backgroundTint="#e67e22"
        android:textColor="#fff"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="38dp"
        android:layout_marginEnd="4dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/message_time_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/message_body_sent"
        android:layout_alignLeft="@id/message_body_sent"
        android:layout_alignBottom="@id/message_body_sent"/>


</RelativeLayout>