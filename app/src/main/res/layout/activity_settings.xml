<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingsActivity">

    <RelativeLayout
        android:id="@+id/mentor_layout_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:titleTextColor="@color/colorFlatWhite"
            app:subtitleTextColor="@color/colorFlatWhite"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            app:title="@string/mentor_informations_activity"
            android:theme="@style/Theme.AppCompat.Light"
            app:popupTheme="@style/Theme.AppCompat.Light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="@string/mentor_informations_activity"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_marginTop="?android:attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/uploaded_mentor_photo_settings"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:layout_margin="12dp"
                        android:visibility="visible"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image_mentor_settings"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/profile"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/colorFlatWhite"/>

                    </LinearLayout>

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/first_name_input_text_mentor_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorFlatWhite">

                    <EditText
                        android:id="@+id/first_name_edit_text_mentor_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/first_name_mentor"
                        />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/last_name_input_text_mentor_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorFlatWhite"
                    android:layout_marginTop="16dp">

                    <EditText
                        android:id="@+id/last_name_edit_text_mentor_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/last_name_mentor"
                        />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/city_input_text_mentor_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorFlatWhite"
                    android:layout_marginTop="16dp">

                    <EditText
                        android:id="@+id/city_edit_text_mentor_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/city_mentor"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/speciality_input_text_mentor_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorFlatWhite"
                    android:layout_marginTop="16dp">

                    <EditText
                        android:id="@+id/speciality_edit_text_mentor_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/specialty_mentor"
                        />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_input_text_mentor_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorFlatWhite"
                    android:layout_marginTop="16dp">

                    <EditText
                        android:id="@+id/email_edit_text_mentor_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="@string/email_mentor"
                        />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/number_phone_input_text_mentor_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorFlatWhite"
                    android:layout_marginTop="16dp">

                    <EditText
                        android:id="@+id/number_phone_edit_text_mentor_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:hint="@string/phone_number_mentor"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/submit_action_btn_mentor_settings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:padding="12dp"
                    android:textColor="@color/colorFlatWhite"
                    android:background="@color/colorAccent"
                    android:text="@string/submit"
                    />


            </LinearLayout>



        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/startup_layout_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:titleTextColor="@color/colorFlatWhite"
            app:subtitleTextColor="@color/colorFlatWhite"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/Theme.AppCompat.Light"
            app:popupTheme="@style/Theme.AppCompat.Light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="@string/startup_informations_activity"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_marginTop="?android:attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/uploaded_startup_photo_settings"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:layout_margin="12dp"
                        android:visibility="visible"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image_startup_settings"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/startup"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/colorFlatWhite"/>

                    </LinearLayout>

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/startup_name_input_text_startup_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorFlatWhite">

                    <EditText
                        android:id="@+id/startup_name_edit_text_startp_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/startup_name"
                        />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/description_input_text_startup_settings"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:backgroundTint="@color/colorFlatWhite"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/description_edit_text_startp_settings"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:inputType="text"
                        android:hint="@string/description_startup"
                        />

                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/domain_input_text_startup_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorFlatWhite">

                    <EditText
                        android:id="@+id/domain_edit_text_startp_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/domain_startup"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/need_input_text_startup_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorFlatWhite">

                    <EditText
                        android:id="@+id/need_edit_text_startp_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/need_startup"

                        />

                </android.support.design.widget.TextInputLayout>


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/submit_action_btn_startup_settings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:padding="12dp"
                    android:textColor="@color/colorFlatWhite"
                    android:background="@color/colorAccent"
                    android:text="@string/submit"
                    />



            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/progress_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#92000000"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/rounded_layout"
            android:backgroundTint="@color/colorFlatWhite"
            android:orientation="vertical"
            android:layout_margin="32dp"
            android:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading_data"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#2d2b2b"
                android:fontFamily="sans-serif-condensed"
                />

            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>


    </LinearLayout>




</RelativeLayout>