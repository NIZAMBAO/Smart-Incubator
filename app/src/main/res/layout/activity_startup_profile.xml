<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StartupProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/wallpaper_startup"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/startup" />

                <TextView
                    android:id="@+id/startup_name_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/startup_name"
                    android:textColor="@color/colorFlatWhite"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/startup_domain_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/domain_startup"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:paddingTop="58dp"
            android:paddingLeft="28dp"
            android:paddingRight="28dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="100dp"
                      android:orientation="horizontal"
                      android:padding="8dp">

                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/associate" />

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="16dp">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="sans-serif-condensed"
                              android:text="@string/need_startup"
                              android:textSize="20sp" />

                          <TextView
                              android:id="@+id/startup_need_profile"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Programmers"
                              android:textColor="@color/colorPrimaryDark"
                              android:textSize="18sp" />

                      </LinearLayout>

                  </LinearLayout>


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="100dp"
                      android:orientation="horizontal"
                      android:padding="8dp">

                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/statue" />

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="16dp">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="sans-serif-condensed"
                              android:text="@string/juridique_status_startup"
                              android:textSize="20sp" />

                          <TextView
                              android:id="@+id/startup_jurdique_profile"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="SARL"
                              android:textColor="@color/colorPrimaryDark"
                              android:textSize="18sp" />

                      </LinearLayout>

                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="100dp"
                      android:orientation="horizontal"
                      android:padding="8dp">

                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/calendar" />

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="16dp">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="sans-serif-condensed"
                              android:text="@string/creation_date_startup"
                              android:textSize="20sp" />

                          <TextView
                              android:id="@+id/startup_date_creation_profile"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="16/07/2018"
                              android:textColor="@color/colorPrimaryDark"
                              android:textSize="18sp" />

                      </LinearLayout>

                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="100dp"
                      android:orientation="horizontal"
                      android:padding="8dp">

                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/employees" />

                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="16dp">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="sans-serif-condensed"
                              android:text="@string/number_employees_startup"
                              android:textSize="20sp" />

                          <TextView
                              android:id="@+id/startup_number_employees_profile"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="10"
                              android:textColor="@color/colorPrimaryDark"
                              android:textSize="18sp" />

                      </LinearLayout>

                  </LinearLayout>


                </LinearLayout>


            </ScrollView>

        </RelativeLayout>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/fond_startup"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/startup_fond_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="18000dh"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/chiffre_startup"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/startup_chiffre_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="12000dh"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:fabSize="normal"
        android:src="@drawable/ic_message_black_24dp"
        android:layout_margin="16dp" />


</RelativeLayout>